//Exercise # 3 TYpeScript
let PersonName: string ="bilal ahmad janjua";
console.log(`Your Name is ${PersonName}`);  
//Step I : Show in Lower Case.
let lowcasename:string =PersonName .toLowerCase();
console.log(`Your Name in Lower Case is ${lowcasename}`);
//Step II : Show in Upper Case.
let upcasename : string =PersonName .toUpperCase(); 
console.log(`Your Name in Upper Case is ${upcasename}`);
//Step III : Show in Title Case
let words : string[] = PersonName.split("");

let titlecasename :string ="";
for (let i = 0; i <words.length; i++){
    titlecasename +=words[i].charAt(0).toUpperCase() +words[i].slice(1).toLowerCase()+" "
};
console.log(titlecasename);
